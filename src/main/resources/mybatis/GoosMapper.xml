<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangchaoyue.dao.GoodsMapper">

	<select id="list" resultType="com.wangchaoyue.entity.Goods">
		select * from goods
		<where>
			<if test="minPrice!=null">
				and price>=${minPrice}
			</if>
			<if test="maxPrice!=null">
				and price&lt;=${maxPrice}
			</if>
			<if test="minSales!=null and minSales!=''">
				and sales>=${minSales}
			</if>
			<if test="maxSales!=null and maxSales!=''">
				and sales&lt;=${maxSales}
			</if>
		</where>
	</select>
	<insert id="add" > 	
		INSERT INTO goods(name,price,sales) 
		VALUES(#{name},#{price},#{sales})
	</insert>
</mapper>
